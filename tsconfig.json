{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "@wdio/globals/types",
      "@wdio/cucumber-framework",
      "node",
      "expect-webdriverio"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./features/**/*.ts",
    "./wdio.conf.ts"
  ]
}

